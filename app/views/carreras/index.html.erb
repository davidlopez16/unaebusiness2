<div class="row center-xs">
  <div class="col-xs-12 col-md-8">
      <div class="box text-left">
              <p id="notice"><%= notice %></p>

              <h1>Carreras</h1>

              <table>
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @carreras.each do |carrera| %>
                    <tr>
                      <td><%= carrera.nombre %></td>
                      <td><%= link_to 'Ver', carrera %></td>
                      <td><%= link_to 'Editar', edit_carrera_path(carrera) %></td>
                      <td><%= link_to 'Eliminar', carrera, method: :delete, data: { confirm: 'Estas seguro que desea eliminar la Carrera?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br>

              <%= link_to 'Nueva Carrera', new_carrera_path %>
      </div>
  </div>
</div>